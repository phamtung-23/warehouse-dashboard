# ==========================================
# Environment Variables for Berry Material React
# Copy this file to .env and update values as needed
# ==========================================

# Application Settings
NODE_ENV=development
VITE_APP_VERSION=3.9.0
VITE_APP_BASE_NAME=/
VITE_APP_API_URL=https://mock-data-api-nextjs.vercel.app/

# Database Configuration
POSTGRES_DB=berry_db
POSTGRES_USER=berry_user
POSTGRES_PASSWORD=berry_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATA_PATH=./postgres_data

# Redis Configuration
REDIS_PASSWORD=berry_redis_pass
REDIS_HOST=redis
REDIS_PORT=6379

# Security (Change these in production!)
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Docker Configuration
COMPOSE_PROJECT_NAME=berry-material-react

# Container Ports
REACT_PORT=5173
REACT_PROD_PORT=3000
POSTGRES_PORT_HOST=5432
REDIS_PORT_HOST=6379

# Backend configuration
BACKEND_PORT=3001
DATABASE_URL="postgresql://berry_user:berry_pass@localhost:5432/berry_db?schema=public"

REDIS_URL="redis://localhost:6379"
